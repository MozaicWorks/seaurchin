<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ro.seaurchin.websurvey.securitate.UtilizatorSistem" table="UTILIZATOR_SISTEM">
        <id column="ID_UTILIZATOR_SISTEM" name="idUtilizatorSistem" type="java.lang.Long">
            <generator class="org.hibernate.id.SequenceGenerator">
                <param name="table">UTILIZATOR_SISTEM_SEQ</param>
                <param name="column">NEXT</param>
            </generator>
        </id>

        <property column="NUME" name="numeUtilizator" type="java.lang.String"/>
        <property column="PAROLA" name="parola" type="java.lang.String"/>
        <property column="EMAIL" name="email" type="java.lang.String"/>
        <property column="ACTIV" name="activ" type="java.lang.Boolean"/>
    </class>
</hibernate-mapping>